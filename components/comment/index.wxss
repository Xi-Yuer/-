page {
    background-color: white;
}
.comment {
    padding-top: 20rpx;
    display: flex;
    margin-bottom: 80rpx;
}
.comment .avatart {
    flex: 1;
}
.avatart image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.comment .text{
    flex: 6;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.text .commentsInfo {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.commentsInfo .name {
    font-weight: bold;
}
.commentsInfo .time {
    font-size: 20rpx;
    color: grey;
}
.commentsInfo .likeCount {
    font-size: 25rpx;
    padding: 0 20rpx;
}
.text .commentText {
    font-size: 25rpx;
    color: rgb(36, 36, 36);
    margin-top: 25rpx;
}

.isLike {
    color: red;
}